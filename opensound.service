[Unit]
Description=Opensound Server
After=network.target

[Service]
User=opensound
Group=opensound
WorkingDirectory=/home/opensound/Opensound

# Command to run (using the full path to the venv's python)
ExecStart=/usr/bin/xvfb-run -a /home/opensound/Opensound/venv/bin/python3 /home/opensound/Opensound/OpenSound.py

Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target